{
  "id": "/disk-filler-ephemeral-mesos-quota",
  "container": {
      "portMappings": [
        { 
          "hostPort": 0, 
          "containerPort": 8080,
          "labels": {
              "VIP_0": "/disk-filler-ephemeral-mesos:1234"
           }
        }
      ],
      "type": "MESOS",
      "docker": 
        { 
            "image": "disk_filler:latest" 
        }
  },
  "instances": 1,
  "cpus": 0.25,
  "gpus": 0,
  "mem": 32,
  "disk": 2048,
  "networks": [
    {
        "mode": "container/bridge"
    }
  ],
  "cmd": "python filler.py -a 0.0.0.0 -p 8080 -o /mnt/mesos/sandbox/disk.dat"
}
